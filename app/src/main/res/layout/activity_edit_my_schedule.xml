<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C5CAE9"
    tools:context=".EditMySchedule">

    <!-- Day Header -->
    <TextView
        android:id="@+id/dayhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#333333"
        android:text="Day of the Week" />

    <!-- Start and End Time Inputs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/startTimetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Start Time"
            android:textSize="24sp"
            android:inputType="time"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:padding="12dp"/>

        <!-- Add a gap between Start Time and End Time -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/endTimetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="End Time"
            android:textSize="24sp"
            android:inputType="time"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Work Description Input -->
    <EditText
        android:id="@+id/worktxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Work"
        android:textSize="24sp"
        android:background="#FFFFFF"
        android:textColor="#333333"
        android:padding="12dp"/>

    <!-- Add Button -->
    <Button
        android:id="@+id/addbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#1976D2"
        android:padding="12dp"/>

    <!-- List View -->
    <ListView
        android:id="@+id/timeListView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#BDBDBD"
        android:dividerHeight="1dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
